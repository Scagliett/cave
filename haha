		<script>
			$("#btnSupremo").click(function() {
				var size = discoverMySize();      
				alert("O tamanho ideal para o cliente e: "+size);
			});
		function discoverMySize(){
			var neck = document.getElementById('neck').value;
			var height = document.getElementById('height').value;
			var chest = document.getElementById('chest').value;

			if(neck<= 39 && chest < 104 && height <= 69){
				return 'P';
			}else if(neck <= 40 && chest < 108  && height <=70){
				return 'M';
			}else{
				return 'G';
			}

	//		return size;
			}
		</script>

